{
  "name": "sortbyextension",
  "license": "MIT",


  "displayName": "extsort",
  "description": "organize files by extension in your workplace",
  "publisher": "neehara",
  "version": "0.0.1",
  "repository": {
  "type": "git",
  "url": "https://github.com/neehubee/sortbyextension"
},

  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
 "contributes": {
  "viewsContainers": {
    "activitybar": [
      {
        "id": "extensionViewContainer",
        "title": "Ext Sort",
        "icon": "media/icon.png"
      }
    ]
  },
  "views": {
    "extensionViewContainer": [
      {
        "id": "fileExtensionView",
        "name": "Grouped by Extension"
      }
    ]
  },
  "commands": [
    {
      "command": "sortByExtension.run",
      "title": "Sort Files by Extension"
    }
  ],
  "configuration": {
    "type": "object",
    "title": "Sort by Extension Settings",
    "properties": {
      "sortByExtension.ignoreFolders": {
        "type": "array",
        "default": [".git", "node_modules", ".vscode"],
        "items": {
          "type": "string"
        },
        "description": "List of folders to exclude from scanning"
      }
    }
  }
}
,
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
